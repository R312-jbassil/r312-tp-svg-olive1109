---
import Layout from '../../layouts/Layout.astro';
import PocketBase from 'pocketbase';

// Récupère l'id depuis l'URL
const { id } = Astro.params;

// Connexion à PocketBase
const pb = new PocketBase('http://127.0.0.1:8090');

// Récupère le SVG par son id
let svgData = null;
try {
  svgData = await pb.collection('svg').getOne(id);
} catch (e) {
  svgData = null;
}
---

<Layout>
    <html lang="fr">
    <head>
        <title>Détail SVG</title>
        <meta charset="UTF-8" />
    </head>
    <body class="bg-base-200 min-h-screen flex flex-col items-center justify-center p-8">
        {svgData ? (
        <div class="max-w-2xl w-full bg-base-100 rounded-xl shadow-xl p-8 flex flex-col gap-6 items-center">
            <h1 class="text-2xl font-bold mb-2">{svgData.name}</h1>
            <div class="border border-base-300 rounded-lg p-4 bg-white flex justify-center items-center">
            <div innerHTML={svgData.code}></div>
            </div>
            <pre class="bg-base-200 p-4 rounded text-xs overflow-x-auto w-full">{svgData.code}</pre>
        </div>
        ) : (
        <div class="text-red-500 text-xl">SVG introuvable</div>
        )}
    </body>
    </html>
</Layout>